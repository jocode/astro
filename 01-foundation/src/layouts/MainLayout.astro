---
import { ClientRouter } from "astro:transitions";
import Navbar from "../components/Navbar.astro";
import '../styles/global.css';

interface Props {
    title: string;
    age?: number;
    isActive?: boolean;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <ClientRouter />
</head>
<body>
    <Navbar />
    <main>
        <slot />
    </main>
</body>
</html>
